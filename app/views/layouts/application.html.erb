<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <head>
    <%= render "/refinery/head" %>
  </head>
  <body id="<%= canonical_id @page %>">
    <%= site_bar -%>
    <div class="row">
      <div class="large 12-columns">
        <% cache 'logo' do %>
        <h1 id="logo"><a href="/"><img src="https://s3-us-west-2.amazonaws.com/wildearthproductions/logo.png" /></a></h1>
        <% end %>
      </div>
    </div>
    <div class="sticky">
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
        </li>
        <li class="toggle-topbar menu-icon">
          <a href="#"><span>Menu</span></a>
        </li>
      </ul>
      <section class="top-bar-section">
        <% cache 'menu' do %>
        <%= Refinery::Pages::MenuPresenter.new(refinery_menu_pages, self).to_html %>
        <% end %>
      </section>
    </div>
  </nav>
  </div>
    <div id="page_container" class="container">
      <header id="header">
      <% if Refinery::Setting.find_or_set(:live, false) %>
        <a href="/live"><blink>WILD EARTH IS BROADCASTING NOW</blink></a>
      <% end %>
      </header>
      <section id="page">
        <div class="row">
          <%= yield %>
        </div>
      </section>
      <div class="row">
        <div class="large-12 columns">
          <footer>
            <%= render "/refinery/footer" -%>
          </footer>
        </div>
      </div>
    </div>
    <%= render "/refinery/javascripts" %>
  </body>
</html>
